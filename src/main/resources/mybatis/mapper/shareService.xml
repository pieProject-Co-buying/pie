<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pie.pieProject.DAO.IShareServiceDao">
	<select id="getBoardList" resultType="com.pie.pieProject.DTO.ShareServiceDto">
		select * from shareServiceBoard
	</select>
	<select id="selectBoard" resultType="com.pie.pieProject.DTO.ShareServiceDto">
		select * from shareServiceBoard where sh_numID=#{param1}
	</select>
	<select id="searchTitle" resultType="com.pie.pieProject.DTO.ShareServiceDto">
		select * from shareServiceBoard where sh_title like '%${param1}%' or sh_content like '%${param1}%'
	</select>
	<insert id="insertBoard">
		insert into shareServiceBoard (sh_id,sh_nickname,sh_title,sh_content,sh_price,sh_personnelMax,sh_DeadLine) values (#{param1},#{param2},#{param3},#{param4},#{param5},#{param6},#{param7})
	</insert>
	<update id="updateBoard" parameterType="com.pie.pieProject.DTO.ShareServiceDto">
		update shareServiceBoard set sh_title=#{sh_title}, sh_content=#{sh_content}, sh_price=#{sh_price}, sh_personnelMax=#{sh_personnelMax}, sh_DeadLine=#{sh_DeadLine} where sh_numID=#{sh_numID}
	</update>
	<delete id="deleteBoard" parameterType="_int">
		delete shareServiceBoard where sh_numID=#{param1}
	</delete>
</mapper>