<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pie.pieProject.DAO.IShareServiceDao">
	<!--게시판 리스트 불러오기-->
	<select id="getBoardList" resultType="com.pie.pieProject.DTO.ShareServiceDto">
		select * from shareServiceBoard
	</select>
	<!--해당 게시물 상세 페이지-->
	<select id="selectBoard" resultType="com.pie.pieProject.DTO.ShareServiceDto">
		select * from shareServiceBoard where sh_numID=#{param1}
	</select>
	<!--게시판 검색-->
	<select id="searchTitle" resultType="com.pie.pieProject.DTO.ShareServiceDto">
		select * from shareServiceBoard where sh_title like '%${param1}%' or sh_content like '%${param1}%'
	</select>
	<!--내가 쓴 게시글-->
	<select id="myBoard" resultType="com.pie.pieProject.DTO.ShareServiceDto">
		select * from shareServiceBoard where sh_id=#{param1}
	</select>
	<!--결제 완료 페이지-->
	<select id="completePay" resultType="com.pie.pieProject.DTO.ShareServiceDto">
		select * from shareServiceBoard where sh_numID=#{sh_numID}
	</select>
	<!--게시글 작성-->
	<insert id="insertBoard">
    	insert into shareServiceBoard (sh_numID,sh_id,sh_nickname,sh_title,sh_content,sh_category,sh_price,sh_process,sh_DeadLine,sh_personnelNow,sh_personnelMax,sh_filename,sh_product) values (sh_numID.nextval,#{sh_id},#{sh_nickname},#{sh_title},#{sh_content},#{sh_category},#{sh_price},#{sh_process},TO_DATE(#{sh_DeadLine}, 'YYYY-MM-DD'),#{sh_personnelNow},#{sh_personnelMax},#{sh_filename},sh_product.nextval)
	</insert>
	<!--게시글 수정-->
	<update id="updateBoard" parameterType="com.pie.pieProject.DTO.ShareServiceDto">
		update shareServiceBoard set sh_title=#{sh_title}, sh_content=#{sh_content}, sh_price=#{sh_price}, sh_personnelMax=#{sh_personnelMax}, sh_DeadLine=#{sh_DeadLine} where sh_numID=#{sh_numID}
	</update>
	<!--게시글 삭제-->
	<delete id="deleteBoard" parameterType="_int">
		delete shareServiceBoard where sh_numID=#{param1}
	</delete>
	<!--현재 신청자 카운트-->
	<update id="updatePersonnelNow" parameterType="int">
        update shareServiceBoard set personnel_now = personnel_now + 1 where sh_numID = #{shNumId}
    </update>
</mapper>